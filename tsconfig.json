{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"composite": true,
		/**
	   * Typecheck JS in `.svelte` and `.js` files by default.
	   * Disable checkJs if you'd like to use dynamic types in JS.
	   * Note that setting allowJs false does not prevent the use
	   * of JS in `.svelte` files.
	   */
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"baseUrl": ".",
		"paths": {
			"$lib": [
				"./assets/ts/lib"
			],
			"$lib/*": [
				"./assets/ts/lib/*"
			],
			"$lib/components": [
				"./assets/ts/lib/components"
			],
			"$lib/components/*": [
				"./assets/ts/lib/components/*"
			],
			"$app": [
				"assets/ts/lib/sk/app"
			],
			"$app/*": [
				"assets/ts/lib/sk/app/*"
			],
			"$admin-settings": [
				"assets/ts/admin-settings"
			],
			"$admin-settings/*": [
				"assets/ts/admin-settings/*"
			],
			"$tools": [
				"assets/ts/tools"
			],
			"$tools/*": [
				"assets/ts/tools/*"
			]
		}
	},
	"include": [
		"assets/**/*.ts",
		"assets/**/*.js",
		"assets/**/*.svelte",
		"assets/**/*.d.ts"
	],
	"exclude": [
		"assets/js",
		"node_modules",
		"dist"
	]
}