{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"vendor/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": [
				"assets/**/*.svelte"
			],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedLabels": "off"
					},
					"suspicious": {
						"noConfusingLabels": "off"
					},
					"style": {
						"useConst": "off"
					}
				}
			}
		}
	]
}